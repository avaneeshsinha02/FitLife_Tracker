<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white_bg"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navy_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="FitLife Tracker" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <FrameLayout
                android:id="@+id/progress_container"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="10000"
                    android:progress="0"
                    android:progressDrawable="@drawable/circle_progress_bar"
                    android:rotation="-90" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_steps_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/navy_blue"
                        android:textSize="48sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steps"
                        android:textColor="@color/navy_blue_light"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_calories"
                style="@style/DashboardCard"
                app:layout_constraintEnd_toEndOf="parent"      app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/progress_container">

                <LinearLayout style="@style/DashboardCardLayout">
                    <ImageView style="@style/DashboardCardIcon" android:src="@drawable/ic_calories" />
                    <TextView android:id="@+id/textView_calories_value" style="@style/DashboardCardValue" android:text="0 kcal" />
                    <TextView style="@style/DashboardCardLabel" android:text="Calories" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_distance"
                style="@style/DashboardCard"
                android:layout_marginTop="16dp"                  app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"   app:layout_constraintTop_toBottomOf="@id/card_calories"> <LinearLayout style="@style/DashboardCardLayout">
                <ImageView style="@style/DashboardCardIcon" android:src="@drawable/ic_distance" />
                <TextView android:id="@+id/textView_distance_value" style="@style/DashboardCardValue" android:text="0.0 km" />
                <TextView style="@style/DashboardCardLabel" android:text="Distance" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>


            <ImageButton
                android:id="@+id/button_mic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_background_circle"
                android:elevation="4dp"
                android:src="@drawable/ic_mic"
                app:layout_constraintBottom_toBottomOf="@id/button_toggle_tracking"
                app:layout_constraintEnd_toStartOf="@id/button_toggle_tracking"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/button_toggle_tracking"
                app:tint="@color/navy_blue" />

            <ImageButton
                android:id="@+id/button_toggle_tracking"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/button_background_circle"
                android:backgroundTint="@color/navy_blue"
                android:elevation="8dp"
                android:src="@drawable/ic_play"
                app:layout_constraintEnd_toStartOf="@id/button_summary"
                app:layout_constraintStart_toEndOf="@id/button_mic"
                app:layout_constraintTop_toBottomOf="@id/card_distance"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/button_summary"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_background_circle"
                android:elevation="4dp"
                android:src="@drawable/ic_summary_chart"
                app:layout_constraintBottom_toBottomOf="@id/button_toggle_tracking"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/button_toggle_tracking"
                app:layout_constraintTop_toTopOf="@id/button_toggle_tracking"
                app:tint="@color/navy_blue" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>